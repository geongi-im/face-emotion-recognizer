# ==================== 데이터셋 설정 ====================
# 감정 클래스 설정 (쉼표로 구분)
# 예시: happy,sad,neutral,embarrassed,anxiety
CLASS_NAMES=happy,sad,neutral

# 데이터 디렉토리 경로
DATA_DIR_TRAIN=dataset_crop/train
DATA_DIR_VAL=dataset_crop/validation

# ==================== 이미지 및 배치 설정 ====================
# 학습할 이미지 크기 (224×224 권장)
IMG_SIZE=224

# 배치 크기 (한번에 몇개의 이미지를 학습할지)
# GPU 사용 시 32-64, CPU 사용 시 16-32 권장
BATCH_SIZE=32

# 검증 스텝 수 (에포크마다 검증에 사용할 배치 수, 보통 100~500)
VAL_STEPS=500

# ==================== 헤드 학습 하이퍼파라미터 ====================
# 헤드 학습 에포크마다 몇 스텝 학습할지
STEPS_PER_EPOCH_HEAD=1000

# 헤드 학습 에포크 수
EPOCHS_HEAD=6

# 헤드 학습률
LEARNING_RATE_HEAD=0.0003

# ==================== 파인튜닝 하이퍼파라미터 ====================
# 파인튜닝 에포크마다 몇 스텝 학습할지
STEPS_PER_EPOCH_FINETUNE=1000

# 파인튜닝 에포크 수
EPOCHS_FINETUNE=42

# 파인튜닝 학습률
LEARNING_RATE_FINETUNE=0.00002

# ==================== 정규화 및 드롭아웃 ====================
# 드롭아웃 비율 (과적합 방지)
DROPOUT_RATE=0.25

# Weight Decay (L2 정규화 강도)
WEIGHT_DECAY=0.00001

# ==================== 콜백 설정 ====================
# Early Stopping: N번 연속 개선이 없으면 학습 중단
EARLY_STOPPING_PATIENCE=8

# 학습률 감소: N번 연속 val_loss 개선 없으면 학습률 감소
REDUCE_LR_PATIENCE=3

# 학습률 감소 비율 (기존 학습률을 이 비율만큼 곱함)
REDUCE_LR_FACTOR=0.5

# ==================== 고급 하이퍼파라미터 ====================
# BatchNormalization 동결 전략 (all|s3|adaptive|none)
# all: 모든 BN 동결 (작은 배치에서 안정성 향상)
# s3: stage3에서만 BN 학습
# adaptive: 단계적 BN 학습
# none: 모든 BN 학습
FREEZE_BN_MODE=all

# Warmup 비율 (0~1, 전체 스텝 중 warmup 비율)
WARMUP_RATIO=0.1

# 자동 스텝 계산 (true: 데이터셋 크기 기반, false: 수동 설정)
AUTO_STEPS=true

# 마지막 파인튜닝 스테이지에서 MixUp/CutMix 비활성화 여부
DISABLE_MIX_IN_LAST_STAGE=true

# EMA (Exponential Moving Average) Decay
EMA_DECAY=0.999

# ==================== 데이터 증강 (MixUp/CutMix) ====================
# MixUp Alpha 값 (0~1, 일반적으로 0.2)
MIXUP_ALPHA=0.2

# CutMix Alpha 값 (0~1, 일반적으로 0.2)
CUTMIX_ALPHA=0.2

# MixUp 적용 확률 (0~1)
P_MIXUP=0.7

# CutMix 적용 확률 (0~1)
P_CUTMIX=0.3

# Label Smoothing (선택사항, MixUp/CutMix 사용 시 보통 0.0)
# LABEL_SMOOTHING=0.0
